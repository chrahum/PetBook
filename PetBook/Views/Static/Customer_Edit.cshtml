@{
    Layout = null;
}
    <h2>Customer</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="Name" class = "control-label col-md-2"> Name </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Name" id="Name"  class="form-control"/>
                    <div id="validation_for_Name"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="VeterinarianId" class = "control-label col-md-2"> Veterinarian </label>
                <div class="col-md-10">
                    <select ng-model="data.VeterinarianId" id="VeterinarianId"  class="form-control"
                            ng-options="option.Id as option.Name for option in VeterinarianId_options">
                        <option value="">-- choose Veterinarian --</option>
                    </select>
                    <div id="validation_for_VeterinarianId"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Address" class = "control-label col-md-2"> Address </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Address" id="Address"  class="form-control"/>
                    <div id="validation_for_Address"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Age" class = "control-label col-md-2"> Age </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Age" id="Age"  class="form-control"/>
                    <div id="validation_for_Age"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="PhoneNumber" class = "control-label col-md-2"> PhoneNumber </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.PhoneNumber" id="PhoneNumber"  class="form-control"/>
                    <div id="validation_for_PhoneNumber"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Email" class = "control-label col-md-2"> Email </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Email" id="Email"  class="form-control"/>
                    <div id="validation_for_Email"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Gender" class = "control-label col-md-2"> Gender </label>
                <div class="col-md-10">
                    <input type="checkbox" ng-model="data.Gender" id="Gender"  class="form-control"/>
                    <div id="validation_for_Gender"></div>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
    
    <div>
        <a href="#/Customer">Back to List</a>
    </div>
