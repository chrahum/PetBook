@{
    Layout = null;
}
    <h2>Profile</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="NotesOfVisit" class = "control-label col-md-2"> NotesOfVisit </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.NotesOfVisit" id="NotesOfVisit"  class="form-control"/>
                    <div id="validation_for_NotesOfVisit"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="PetId" class = "control-label col-md-2"> Pet </label>
                <div class="col-md-10">
                    <select ng-model="data.PetId" id="PetId"  class="form-control"
                            ng-options="option.Id as option.Name for option in PetId_options">
                        <option value="">-- choose Pet --</option>
                    </select>
                    <div id="validation_for_PetId"></div>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
    
    <div>
        <a href="#/Profile">Back to List</a>
    </div>
